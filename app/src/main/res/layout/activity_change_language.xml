<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.ChangeLanguage"
    android:background="@color/Hex"
    >
    
    <TextView
        android:id="@+id/tv_change_language"
        android:layout_width="191dp"
        android:layout_height="43dp"
        android:layout_marginStart="104dp"
        android:text="@string/change_language"
        android:textSize="22sp"
        android:textColor="#234E70"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.135" />


    <RadioGroup
        android:id="@+id/languageGroup"
        android:layout_width="340dp"
        android:layout_height="231dp"
        android:layout_marginTop="212dp"
        android:layout_marginBottom="460dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15">

        <RadioButton
            android:id="@+id/englishRadio"
            android:layout_width="202dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:text="@string/english"
            android:textSize="14sp"
            android:textColor="#234E70"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.269" />

        <RadioButton
            android:id="@+id/belorussianRadio"
            android:layout_width="203dp"
            android:layout_height="66dp"
            android:layout_marginStart="16dp"
            android:text="@string/belorussian"
            android:textSize="14sp"
            android:textColor="#234E70"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.381" />

        <RadioButton
            android:id="@+id/polishRadio"
            android:layout_width="203dp"
            android:layout_height="66dp"
            android:layout_marginStart="16dp"
            android:text="@string/polish"
            android:textSize="14sp"
            android:textColor="#234E70"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.499" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>